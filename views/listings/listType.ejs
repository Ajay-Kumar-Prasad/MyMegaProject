<% layout("/layouts/boilerplate") %>
<body>
    <div id="filters">
        <div class="filter">
            <div><a class="filter-icon" href="/listing/type?type=Trending"><i class="fa-solid fa-fire"></i></a></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><a class="filter-icon" href="/listing/type?type=Rooms"><i class="fa-solid fa-bed"></i></a></div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div><a class="filter-icon" href="/listing/type?type=Iconic cities"><i class="fa-solid fa-mountain-city"></i></a></div>
            <p>Iconic cities</p>
        </div>
        <div class="filter">
            <div><a class="filter-icon" href="/listing/type?type=Beachfront"><i class="fa-solid fa-umbrella-beach"></i></a></div>
            <p>Beachfront</p>
        </div>
        <div class="filter">
            <div><a class="filter-icon" href="/listing/type?type=Mountains"><i class="fa-solid fa-mountain"></i></a></div>
            <p>Mountains</p>
        </div>
        <div class="filter">
            <div><a class="filter-icon" href="/listing/type?type=Castles"><i class="fa-brands fa-fort-awesome"></i></a></div>
            <p>Castles</p>
        </div>
        <div class="filter">
            <div><a class="filter-icon" href="/listing/type?type=Amazing pools"><i class="fa-solid fa-person-swimming"></i></a></div>
            <p>Amazing pools</p>
        </div>
        <div class="filter">
            <div><a class="filter-icon" href="/listing/type?type=Camping"><i class="fa-solid fa-campground"></i></a></div>
            <p>Camping</p>
        </div>
        <div class="filter">
            <div><a class="filter-icon" href="/listing/type?type=Farms"><i class="fa-solid fa-cow"></i></a></div>
            <p>Farms</p>
        </div>
        <div class="filter">
            <div><a class="filter-icon" href="/listing/type?type=Arctic"><i class="fa-solid fa-snowflake"></i></a></div>
            <p>Arctic</p>
        </div>
        <div class="filter">
            <div><a class="filter-icon" href="/listing/type?type=Domes"><i class="fa-solid fa-igloo"></i></a></div>
            <p>Domes</p>
        </div>
        <div class="filter">
            <div><a class="filter-icon" href="/listing/type?type=Boats"><i class="fa-solid fa-ship"></i></a></div>
            <p>Boats</p>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% if(allListings.length > 0) { %>
            <% for(let listing of allListings) { %>
                <a class="listing-link" href="/listing/<%= listing._id %>">
                    <div class="card col listing-card">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;" >
                        <div class="card-img-ovewrlay">
                            
                        </div>
                        <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b> <br>
                            &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
                            <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
                        </p>
                        </div>
                    </div>
                </a> 
            <% } %>
        <% } else { %> 
            <h2>No Listings found!</h2>
        <% } %>
        
    </div>
</body>
